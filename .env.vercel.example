# Configuration Vercel - Variables d'environnement

# Base de données Supabase
DATABASE_URL=postgresql://postgres:votre-mot-de-passe@votre-projet.supabase.co:5432/postgres
SUPABASE_URL=https://votre-projet.supabase.co
SUPABASE_ANON_KEY=votre-cle-anon
SUPABASE_SERVICE_KEY=votre-cle-service

# Configuration Vercel
NODE_ENV=production
VERCEL_ENV=production

# Sécurité pour les cron jobs
CRON_SECRET=votre-secret-unique-pour-cron

# Configuration des workflows
WEBHOOK_SECRET=votre-secret-webhook
ENCRYPTION_KEY=votre-cle-encryption-32-caracteres

# Configuration des APIs externes (optionnel)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx
EMAIL_SERVICE_API_KEY=votre-cle-email
EXTERNAL_API_KEY=votre-cle-api

# Monitoring et logging
LOG_LEVEL=info
SENTRY_DSN=votre-dsn-sentry-optionnel

# Configuration des limites
MAX_EXECUTION_TIME=300
MAX_WORKFLOW_STEPS=50
MAX_PAYLOAD_SIZE=10485760
